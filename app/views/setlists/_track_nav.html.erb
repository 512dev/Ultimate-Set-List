<div class="navbar-wagon track-nav">
	<%= image_tag "vinyl.svg", class: "nav-icon", id: "album-link" %>
	<%= image_tag "track.svg", class: "nav-icon", id: "track-link" %>
	<i class="fa fa-search track-search" aria-hidden="true"></i>
	<%= form_tag('/tracks', method: :get) do -%>
  		<div class="search text-center">
  			<%= text_field_tag :search, nil, placeholder: "Search..." %>
  			<%= button_tag(type: "submit", class: "btn btn-default") do %>
					<span class="glyphicon glyphicon-search icon-large" aria-hidden="true"></span>
			<% end %>
  		</div>
	<% end -%>
</div>